{
    "compilerOptions": {
        "module": "commonjs",
        "baseUrl": "./",
        "outDir": "dist",
        "sourceMap": false,
        "declaration": true,
        "noImplicitAny": false,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "removeComments": true,
        "experimentalDecorators": true,
        "target": "es6",
        "typeRoots": [
            "node_modules/@types"
        ]
    },
    "include": [
        "./webpack-system-operations-src/**/*.ts"
    ],
    "exclude": [
        "node_modules"
    ]
}
